<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PotvrdiPorudzbinu">

    <LinearLayout
        android:id="@+id/zavrsi_kupovinu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/potvrdi_porudzbinu_toolbar"/>

        <EditText
            android:id="@+id/et_adresa_kupca"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Adresa kupca"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_ukupna_cena"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Ukupna cena"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_potvrdi_porudzbinu_komentar"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Komentar"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_potvrdi_porudzbinu_ocena"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Ocena"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lista_artikala_za_potvrdu_kupovine"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_artikli_za_potvrdu_kupovine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </ListView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>