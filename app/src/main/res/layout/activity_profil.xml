<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Profil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>


        <TextView
            android:id="@+id/tv_korisnik_ime"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_korisnik_prezime"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_korisnik_adresa"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_korisnik_tip_korisnika"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_prikazi_artikle_prodavcu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prikazi artikle" />

        <Button
            android:id="@+id/btn_prikazi_porudzbine_kupcu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prikazi porudzbine kupcu" />

        <Button
            android:id="@+id/btn_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Za admina"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>